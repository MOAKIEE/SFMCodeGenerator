<Window x:Class="SFMCodeGenerator.Views.ManageCommonItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="管理常用列表" Height="550" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 添加新项 -->
        <GroupBox Grid.Row="0" Header="添加新项" Style="{StaticResource SettingsGroupBox}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ComboBox x:Name="TypeSelector" Grid.Column="0" Width="100" Margin="0,0,8,0"
                          Style="{StaticResource DefaultComboBox}">
                    <ComboBoxItem Content="标签" IsSelected="True"/>
                    <ComboBoxItem Content="物品ID"/>
                    <ComboBoxItem Content="流体ID"/>
                    <ComboBoxItem Content="能量ID"/>
                    <ComboBoxItem Content="气体ID"/>
                </ComboBox>
                
                <TextBox x:Name="NewItemText" Grid.Column="1" 
                         Style="{StaticResource DefaultTextBox}"
                         KeyDown="NewItemText_KeyDown"/>
                
                <Button Grid.Column="2" Content="添加" Width="70" Margin="8,0,0,0"
                        Style="{StaticResource PrimaryButton}"
                        Click="AddButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- 常用标签列表 -->
        <GroupBox Grid.Row="1" Header="常用标签" Style="{StaticResource SettingsGroupBox}" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox x:Name="LabelsListBox" Grid.Column="0" Height="80"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundLightBrush}" 
                                    CornerRadius="4" Padding="8,4" Margin="2">
                                <TextBlock Text="{Binding}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <Button Grid.Column="1" Content="删除" Width="60" VerticalAlignment="Top"
                        Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                        Click="DeleteLabel_Click"/>
            </Grid>
        </GroupBox>

        <!-- 资源ID列表（分类显示） -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <StackPanel>
                <!-- 物品ID -->
                <GroupBox Header="常用物品ID" Style="{StaticResource SettingsGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ListBox x:Name="ItemIdsListBox" Grid.Column="0" Height="60"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4" Padding="8,4" Margin="2">
                                        <TextBlock Text="{Binding}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Column="1" Content="删除" Width="60" VerticalAlignment="Top"
                                Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                                Click="DeleteItemId_Click"/>
                    </Grid>
                </GroupBox>

                <!-- 流体ID -->
                <GroupBox Header="常用流体ID" Style="{StaticResource SettingsGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ListBox x:Name="FluidIdsListBox" Grid.Column="0" Height="60"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4" Padding="8,4" Margin="2">
                                        <TextBlock Text="{Binding}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Column="1" Content="删除" Width="60" VerticalAlignment="Top"
                                Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                                Click="DeleteFluidId_Click"/>
                    </Grid>
                </GroupBox>

                <!-- 能量ID -->
                <GroupBox Header="常用能量ID" Style="{StaticResource SettingsGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ListBox x:Name="EnergyIdsListBox" Grid.Column="0" Height="60"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4" Padding="8,4" Margin="2">
                                        <TextBlock Text="{Binding}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Column="1" Content="删除" Width="60" VerticalAlignment="Top"
                                Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                                Click="DeleteEnergyId_Click"/>
                    </Grid>
                </GroupBox>

                <!-- 气体ID -->
                <GroupBox Header="常用气体ID" Style="{StaticResource SettingsGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ListBox x:Name="GasIdsListBox" Grid.Column="0" Height="60"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLightBrush}" CornerRadius="4" Padding="8,4" Margin="2">
                                        <TextBlock Text="{Binding}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Column="1" Content="删除" Width="60" VerticalAlignment="Top"
                                Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                                Click="DeleteGasId_Click"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- 关闭按钮 -->
        <Button Grid.Row="3" Content="完成" Width="100" Margin="0,16,0,0"
                Style="{StaticResource PrimaryButton}"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
